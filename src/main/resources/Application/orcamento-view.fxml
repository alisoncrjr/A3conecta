<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="900.0" stylesheets="@/Application/style.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.OrcamentoController">
    <children>

        
        <Pane prefHeight="67.0" prefWidth="900.0" style="-fx-background-color: #4A148C; -fx-effect: dropshadow(gaussian, black, 10, 0.2, 0, 2);" />

        <StackPane styleClass="app-shell" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <VBox alignment="TOP_CENTER" spacing="15.0" styleClass="card mobile-card" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                    <children>

                        
                        <HBox alignment="CENTER_LEFT" spacing="15.0">
                            <children>
                                <Button onAction="#handleVoltar" text="< Voltar" styleClass="button-secondary" />

                                <Label fx:id="lblNomeProjeto" text="Nome do Projeto" style="-fx-font-size: 26; -fx-font-weight: bold; -fx-text-fill: #4A148C;">
                                    <font>
                                        <Font name="Arial Black" size="24.0" />
                                    </font>
                                </Label>

                                <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
                                    <children>
                                        <Label text="Status:" style="-fx-font-size: 16; -fx-text-fill: #444;" />
                                        <Label fx:id="lblStatus" text="PENDENTE" style="-fx-font-weight: bold; -fx-font-size: 16; -fx-text-fill: #D84315;">
                                            <padding>
                                                <Insets left="10.0" />
                                            </padding>
                                        </Label>
                                    </children>
                                </HBox>
                            </children>
                        </HBox>

                        <Separator prefHeight="5.0" />

                        <HBox spacing="25.0" VBox.vgrow="ALWAYS">
                            <children>

                                
                                <VBox prefWidth="350.0" spacing="12.0">
                                    <children>
                                        <Label text="Informações do Projeto" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #4A148C;" />

                                        <Label fx:id="lblCliente" />
                                        <Label fx:id="lblPrestador" />
                                        <Label fx:id="lblTipoServico" />
                                        <Label text="Prazo:" />
                                        <DatePicker fx:id="datePickerPrazo" editable="false" />

                                        <Label text="Materiais Necessários (Cliente):" />
                                        <TextArea fx:id="txtMateriaisCliente" editable="false" prefHeight="100.0" wrapText="true" style="-fx-background-radius: 10; -fx-padding: 10;" />

                                        <Label text="Observações do Prestador:" />
                                        <TextArea fx:id="txtObservacoesPrestador" prefHeight="125.0" wrapText="true" style="-fx-background-radius: 10; -fx-padding: 10;" />
                                    </children>
                                </VBox>

                                
                                <VBox prefWidth="500.0" spacing="12.0" HBox.hgrow="ALWAYS">
                                    <children>
                                        <Label text="Orçamento e Custos" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #4A148C;" />

                                        <TableView fx:id="tableViewItens" prefHeight="372.0" prefWidth="495.0" VBox.vgrow="ALWAYS" style="-fx-background-radius: 10; -fx-padding: 5;">
                                            <columns>
                                                <TableColumn fx:id="colNomeItem" prefWidth="150.0" text="Material/Item" />
                                                <TableColumn fx:id="colQuantidade" prefWidth="75.0" text="Qtd." />
                                                <TableColumn fx:id="colValorUnitario" prefWidth="125.0" text="Valor Unitário (R$)" />
                                                <TableColumn fx:id="colValorTotal" prefWidth="125.0" text="Valor Total (R$)" />
                                            </columns>
                                        </TableView>

                                        <HBox fx:id="hboxAddItens" alignment="BOTTOM_LEFT" spacing="10.0" visible="false">
                                            <children>
                                                <TextField fx:id="txtNomeItem" prefWidth="150.0" promptText="Nome do Item" />
                                                <TextField fx:id="txtQtdItem" prefWidth="75.0" promptText="Qtd." />
                                                <TextField fx:id="txtValorUnitItem" prefWidth="125.0" promptText="Valor Unit. (R$)" />
                                                <Button onAction="#handleAdicionarItem" text="+" styleClass="button-primary" />
                                            </children>
                                        </HBox>

                                        <HBox alignment="CENTER_RIGHT" spacing="10.0">
                                            <children>
                                                <Label text="Total Materiais (R$):" />
                                                <Label fx:id="lblTotalMateriais" style="-fx-font-weight: bold;" text="0.00" />
                                            </children>
                                        </HBox>

                                        <HBox alignment="CENTER_RIGHT" spacing="10.0">
                                            <children>
                                                <Label text="Mão de Obra (R$):" />
                                                <TextField fx:id="txtValorMaoDeObra" alignment="CENTER_RIGHT" onAction="#handleAtualizarOrcamento" prefWidth="100.0" text="0.00" />
                                            </children>
                                        </HBox>

                                        <Separator prefWidth="200.0" />

                                        <HBox alignment="CENTER_RIGHT" spacing="10.0">
                                            <children>
                                                <Label text="ORÇAMENTO TOTAL (R$):" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #4A148C;" />
                                                <Label fx:id="lblOrcamentoTotal" text="0.00" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #4A148C;" />
                                            </children>
                                        </HBox>

                                        <Label fx:id="lblFeedback" style="-fx-text-fill: red; -fx-font-weight: bold;" />

                                        <HBox alignment="CENTER" spacing="20.0">
                                            <padding>
                                                <Insets top="10.0" />
                                            </padding>
                                            <children>
                                                <Button fx:id="btnSalvarPrestador" onAction="#handleAtualizarOrcamento" text="Salvar Orçamento" visible="false" styleClass="button-primary" />
                                                <Button fx:id="btnAprovarCliente" onAction="#handleAprovarProjeto" text="Aprovar Orçamento" visible="false" styleClass="button-primary" />
                                            </children>
                                        </HBox>

                                    </children>
                                </VBox>

                            </children>
                        </HBox>

                    </children>
                </VBox>
            </children>
        </StackPane>
    </children>
</AnchorPane>
